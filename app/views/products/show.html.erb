<div class="contents row">
  <div class="main-body">
    <div class="col-md-5 col-md-offset-3">
      <div class="thumbnail" >

        <% if @product.video_id? %>
        <iframe width="740" height="416" src="https://www.youtube.com/embed/<%= @product.video_id %>" frameborder="0" allowfullscreen></iframe>
     　　<% else %>
          <a href="<%= @product.url %>">
            <div class="img-responsive" style="background-image: url(<%= @product.image_url %>);">
            <div class="caption-full">
                <h4><%= @product.title %></h4>
            </div>
            <div class="ratings">
              <p class="pull-right">3 picks</p>
            </div>
          </a>
        <% end %>
      </div>

    <div class="well">
        <hr>
      <div class="row">
        <div class="col-md-12">
          <% if current_user %>
            <%= form_tag("/products/#{@product.id}/comments", method: :post) do %>
              <textarea cols="30" name="comment" placeholder="コメントする" rows="2"></textarea>
              <input type="submit" value="Leave a Comment">
            <% end %>
          <% end %>
          <div class="comments">
            <h4><コメント一覧></h4>
            <% if @comments %>
              <% @comments.each do |comment| %>
                <p>
                  <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %></strong>
                  <%= comment.comment %>
                </p>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
        <hr>
    </div>
  </div>
</div>